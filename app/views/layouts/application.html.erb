<!DOCTYPE html>
<html>
<head>
  <title>Proj2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="flash-container padding-top">
	<% flash.each do |type, msg| %>
	  <% cl = (type == 'notice')? 'alert-success' : 'alert-danger' %>
	  <div class="alert <%=cl%> fade in" role="alert">
		<button class='close' data-dismiss='alert'>&times;</button>
		<%= msg.html_safe %>
	  </div>
	<% end %>
  </div>

<%= yield %>

</body>
</html>
