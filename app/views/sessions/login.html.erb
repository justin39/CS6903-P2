<div class="container">
  <div class="row">
	<h1>Log in</h1>
  </div>
  <div class="row">
	<div class="col-sm-2"></div>
	<div class="col-sm-6">
	  <div class="panel panel-default">
		<div class="panel panel-body">
		  <%= form_tag(action: 'login_attempt') do %>
			<div class="form-group row">
			  <label>Username: </label>
			  <%= text_field_tag :username, "", class: 'form-control' %>
			</div>
			<div class="form-group row">
			  <label>Password: </label>
			  <%= password_field_tag :login_password, "", class: 'form-control' %>
			</div>
			<div class="form-group row">
			  <%= submit_tag 'Log in', class: 'btn btn-primary' %>
			</div>
		  <% end %>
			<div class="form-group row">
		  	  <%= button_to 'Sign up', users_signup_path, method: :get, class: 'btn btn-danger' %>
			</div>
		</div>
	  </div>
	</div>
  </div>
</div>
