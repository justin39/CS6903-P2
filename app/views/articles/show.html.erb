<div class='container'>
  <div class='row'>
	<div class='col-sm-2'></div>
	<div class='col-sm-8'>
	  <h1><%= @article.title %></h1>
	  <hr>
	</div>
  </div>
  <div class='row'>
	<div class='col-sm-2'></div>
	<div class='col-sm-8'>
	  <%= simple_format(@article.text) %>
	</div>
  </div>
  <div class='row' style='padding-top: 20px'>
	<div class='col-sm-2'></div>
	<div class='col-sm-8'>
	  <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary' %> |
	  <%= link_to 'Back', articles_path, class: 'btn btn-danger' %>
	</div>
  </div>
</div>
